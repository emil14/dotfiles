[push]
  default = simple
[alias]
  br = branch
  ci = commit
  cl = clone
  co = checkout
  df = diff
  ft = fetch
  mg = merge
  lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  pl = pull
  ps = push
  st = status -sb
[core]
