[push]
  default = simple
[alias]
  br = branch
  ci = commit
  cia = commit --amend
  cl = clone
  co = checkout
  cp = cherry-pick
  df = diff
  ft = fetch
  mg = merge
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)'
  pl = pull
  ps = push
  st = status -sb
  rb = rebase
[core]
  editor = code --wait
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[diff]
  tool = default-difftool
[difftool "default-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE
